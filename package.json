{
  "name": "pokemon-explorer",
  "version": "1.0.0",
  "description": "Next.js monorepo Pokemon Explorer",
  "author": "dragon99steel@gmail.com",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf .turbo && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "storybook": "turbo storybook",
    "prepare": "node .husky/install.mjs"
  },
  "lint-staged": {
    "*.{js, jsx,ts,tsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,js,ts,jsx,tsx,html}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
